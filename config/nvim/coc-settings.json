{
  "coc.preferences.formatOnSaveFiletypes": ["yaml", "yml", "typescriptreact"],
  "coc.preferences.formatOnType": false,

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/home/anhtumai/.local/bin/black",
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/ultisnips"],

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,

  // prettier
  "prettier.tslintIntegration": false,
  "prettier.eslintIntegration": true,
  "prettier.trailingComma": "all",

  // pairs
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "suggest.noselect": false,

  // rust
  "rust-analyzer.enable": true,
  "rust-analyzer.trace.server": "verbose",
  "rust-analyzer.diagnostics.disabled": ["inactive-code"],

  // dart
  //"dart.lineLength": 100,
  "dart.completeFunctionCalls": false,

  // java

  "java.configuration.runtimes": [
    {
      "name": "JavaSE-19"
    }
  ],

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        "hie.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": true
        }
      }
    }
  },
  "snippets.ultisnips.pythonPrompt": false
}
